<%- include("partials/header.ejs") -%>

<h1 class="compose-title" >Compose</h1>
  <form action="/compose" method="POST">
    
    <div class="form-group">
      <label for="postTitle"><h4>Title</h4></label>
      <input type="text" class="form-control" id="postTitle" name="postTitle" aria-describedby="Title"
        placeholder="Post Title">
      <small id="Title" class="form-text text-muted">You can choose a cool title for you new post.</small>
    </div>
    <div class="form-group">
      <label for="postBody"> <h4>Post</h4> </label>
      <textarea class="form-control is-invalid" id="postBody" name="postBody" placeholder="Write your post here" rows="5"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="publish">Publish</button>

  </form>
<%- include("partials/footer") -%>
